            <umbBlogPost id="1698" parentID="1699" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2011-10-15T01:48:28" updateDate="2012-01-11T10:46:18" nodeName="Team Williams happy with Fridays practice session" urlName="team-williams-happy-with-fridays-practice-session" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1079,1660,1699,1698" isDoc="">
