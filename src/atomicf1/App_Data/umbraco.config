      <Circuit id="1261" parentID="1095" level="3" writerID="0" creatorID="0" nodeType="1191" template="1190" sortOrder="19" createDate="2011-05-25T14:46:19" updateDate="2012-01-11T10:46:03" nodeName="Yas Marina" urlName="yas-marina" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1095,1261" isDoc="">
