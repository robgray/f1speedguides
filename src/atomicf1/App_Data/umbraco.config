            <umbBlogPost id="1700" parentID="1699" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="2" createDate="2011-10-15T11:51:40" updateDate="2012-01-11T10:46:19" nodeName="All eyes on Sepang" urlName="all-eyes-on-sepang" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1079,1660,1699,1700" isDoc="">
