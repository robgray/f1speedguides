            <umbBlogPost id="1925" parentID="1920" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="3" createDate="2012-01-12T11:10:34" updateDate="2012-01-12T11:12:43" nodeName="Ask Lambo #2" urlName="ask-lambo-2" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1857,1858,1920,1925" isDoc="">
