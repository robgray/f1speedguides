            <umbBlogPost id="1726" parentID="1727" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2011-10-24T18:03:36" updateDate="2012-01-11T10:46:19" nodeName="Mark Fogerty at Shanghai International Circuit" urlName="mark-fogerty-at-shanghai-international-circuit" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1079,1660,1727,1726" isDoc="">
