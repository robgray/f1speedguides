            <umbBlogPost id="1419" parentID="1420" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2011-07-06T08:32:36" updateDate="2012-01-11T10:46:15" nodeName="Season 3 championship decider preview: Abu Dhabi" urlName="season-3-championship-decider-preview-abu-dhabi" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1079,1395,1420,1419" isDoc="">
