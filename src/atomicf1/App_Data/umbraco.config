            <umbBlogPost id="1773" parentID="1772" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="2" createDate="2011-11-07T12:58:36" updateDate="2012-01-11T10:46:21" nodeName="Who will master Monaco" urlName="who-will-master-monaco" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1079,1764,1772,1773" isDoc="">
