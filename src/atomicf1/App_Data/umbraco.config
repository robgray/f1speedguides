            <umbBlogPost id="1927" parentID="1920" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="4" createDate="2012-01-12T19:48:07" updateDate="2012-01-12T20:23:27" nodeName="Next Level Wheel Stand Review" urlName="next-level-wheel-stand-review" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1857,1858,1920,1927" isDoc="">
