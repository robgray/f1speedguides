            <umbBlogPost id="1438" parentID="1439" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2011-07-11T12:46:25" updateDate="2012-01-11T10:46:15" nodeName="Flouncy takes Season 3 title, but not without a fight" urlName="flouncy-takes-season-3-title,-but-not-without-a-fight" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1079,1395,1439,1438" isDoc="">
