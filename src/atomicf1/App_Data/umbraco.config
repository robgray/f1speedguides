      <Circuit id="1247" parentID="1095" level="3" writerID="0" creatorID="0" nodeType="1191" template="1190" sortOrder="3" createDate="2011-05-25T14:39:01" updateDate="2012-01-11T10:45:56" nodeName="Shanghai" urlName="shanghai" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1095,1247" isDoc="">
