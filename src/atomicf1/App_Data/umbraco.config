            <umbBlogPost id="1730" parentID="1731" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2011-10-26T12:27:23" updateDate="2012-01-11T10:46:19" nodeName="Istanbul Preview with Jonathon Laggard" urlName="istanbul-preview-with-jonathon-laggard" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1079,1660,1731,1730" isDoc="">
