            <umbBlogPost id="1716" parentID="1714" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="2" createDate="2011-10-20T14:18:38" updateDate="2012-01-11T10:46:19" nodeName="Jonathan Leggard previews Shanghai" urlName="jonathan-leggard-previews-shanghai" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1079,1660,1714,1716" isDoc="">
              <closeComments>0</closeComments>
              <PostDate>2011-10-20T14:26:00</PostDate>
