            <umbBlogPost id="1144" parentID="1147" level="6" writerID="0" creatorID="1" nodeType="1053" template="1046" sortOrder="1" createDate="2011-05-06T07:57:42" updateDate="2012-01-11T10:46:09" nodeName="Krispy signs lucrative sponsorship deal with Libra" urlName="krispy-signs-lucrative-sponsorship-deal-with-libra" writerName="Rob Gray" creatorName="Lambo" path="-1,1084,1057,1145,1146,1147,1144" isDoc="">
              <closeComments>1</closeComments>
