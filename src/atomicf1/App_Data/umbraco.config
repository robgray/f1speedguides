            <umbBlogPost id="1243" parentID="1244" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2011-05-24T18:50:21" updateDate="2012-01-11T10:46:13" nodeName="Season 3 Spanish Full Review" urlName="season-3-spanish-full-review" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1079,1170,1244,1243" isDoc="">
