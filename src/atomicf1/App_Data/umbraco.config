            <umbBlogPost id="1212" parentID="1214" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2011-05-20T07:27:07" updateDate="2012-01-11T10:46:12" nodeName="Malaysian GP Driver Quotes" urlName="malaysian-gp-driver-quotes" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1079,1170,1214,1212" isDoc="">
              <closeComments>0</closeComments>
              <PostDate>2011-05-16T00:00:00</PostDate>
