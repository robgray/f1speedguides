            <umbBlogPost id="1320" parentID="1321" level="6" writerID="0" creatorID="0" nodeType="1053" template="1046" sortOrder="1" createDate="2011-06-03T10:27:13" updateDate="2012-01-11T10:46:14" nodeName="British GP race preview" urlName="british-gp-race-preview" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1057,1079,1306,1321,1320" isDoc="">
