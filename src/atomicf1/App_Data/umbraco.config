      <Circuit id="1259" parentID="1095" level="3" writerID="0" creatorID="0" nodeType="1191" template="1190" sortOrder="17" createDate="2011-05-25T14:45:34" updateDate="2012-01-11T10:46:02" nodeName="Yeongam" urlName="yeongam" writerName="Rob Gray" creatorName="Rob Gray" path="-1,1084,1095,1259" isDoc="">
